<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" Title="Add Vehicle"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VechcileTracking.Views.AddVehicle"
             xmlns:custom="clr-namespace:VechcileTracking"
             Padding="20">
    <NavigationPage.TitleView>
        <Label Text="Add Vehicle" Style="{StaticResource NavigationTitle}"/>
    </NavigationPage.TitleView>

    <StackLayout Orientation="Vertical">
        <custom:CustomEntry Placeholder="Vehcile No" x:Name="VehcileNo"/>
        <custom:CustomEntry Placeholder="Owner Name" Keyboard="Text" x:Name="OwnerName"/>
        <Button Text="Add" Clicked="Add"/>
    </StackLayout>
</ContentPage>
