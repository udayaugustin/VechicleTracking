<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VechcileTracking.Views.EditCustomer" Padding="20">
    <NavigationPage.TitleView>
        <Label Text="Edit Customer" Style="{StaticResource NavigationTitle}"/>
    </NavigationPage.TitleView>
    <StackLayout Orientation="Vertical">
        <Entry Placeholder="Name" x:Name="Name"/>
        <Entry Placeholder="Phone No" x:Name="PhoneNo"/>
        <Button Text="Update" Clicked="Save"/>
    </StackLayout>
</ContentPage>