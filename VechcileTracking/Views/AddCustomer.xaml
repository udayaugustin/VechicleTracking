<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="VechcileTracking.Views.AddCustomer"
             Title="Add Customer ">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Transaction" Order="Secondary" Clicked="NaviagteToTransaction"/>
        <ToolbarItem Text="Add Customer" Order="Secondary" Clicked="NaviagteToAddCustomer"/>
        <ToolbarItem Text="Add Vehicle" Order="Secondary" Clicked="NaviagteToAddVechilce"/>
        <ToolbarItem Text="Vehicle List" Order="Secondary" Clicked="NaviagteToVechicleList"/>
        <ToolbarItem Text="Customer List" Order="Secondary" Clicked="NaviagteToCustomerList"/>        
    </ContentPage.ToolbarItems>
    <StackLayout Orientation="Vertical">
        <Entry Placeholder="Name" x:Name="Name"/>
        <Entry Placeholder="Phone No" x:Name="PhoneNo"/>
        <Button Text="Add" Clicked="Add"/>
    </StackLayout>
</ContentPage>
