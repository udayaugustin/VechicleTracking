<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VechcileTracking.Views.Reports" Title="Reports">   
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Spacing="10">
            <Picker Title="Choose Customer" SelectedIndexChanged="CustomerSelector_SelectedIndexChanged" x:Name="CustomerSelector"/>
            <Button Text="Get Report" Clicked="GetReport_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>